APP_ENV=development
APP_NAME="Gateway PIX"

# URL base do gateway (usado para webhooks)
# Exemplo: https://seu-dominio.com
BASE_URL=http://localhost

# Configuração do banco de dados
DB_HOST=localhost
DB_NAME=gateway_pix
DB_USER=root
DB_PASS=

API_RATE_LIMIT=100
API_RATE_WINDOW=60

WEBHOOK_MAX_RETRIES=5
WEBHOOK_RETRY_DELAY=60

PIX_EXPIRATION_MINUTES=30

LOG_LEVEL=debug
MAINTENANCE_MODE=false

# Exibir taxas na landing page (true/false)
SHOW_PRICING_ON_LANDING=true

# Cloudflare Turnstile (proteção contra bots)
TURNSTILE_SITE_KEY=your_site_key_here
TURNSTILE_SECRET_KEY=your_secret_key_here

# URLs para customização de marca
# Logo (PNG recomendado, tamanho: 150x50px ou proporção 3:1)
LOGO_URL=https://via.placeholder.com/150x50/3b82f6/ffffff?text=Logo
# Favicon (PNG ou ICO, tamanho: 32x32px ou 64x64px)
FAVICON_URL=https://via.placeholder.com/32x32/3b82f6/ffffff?text=F
